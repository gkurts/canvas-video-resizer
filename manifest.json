{
  "manifest_version": 3,
  "name": "Canvas Video Resizer",
  "version": "1.0",
  "description": "Resize video lectures in Canvas LMS",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://*.instructure.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "128": "icon128.png"
  }
}

